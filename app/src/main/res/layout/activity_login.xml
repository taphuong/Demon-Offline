<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_cam"
    tools:context=".Login">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_below="@+id/dn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:onClick="tv_nhm"
            android:clickable="true"
            android:id="@+id/tv_dangkynh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="@string/dangky_nh"
            android:textColor="@color/mau_trang"
            android:textStyle="bold"
            android:focusable="true"
            tools:ignore="KeyboardInaccessibleWidget,OnClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/qlqa" />

        <TextView
            android:id="@+id/tv_thongbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ABC"
            android:textColor="@color/mau_do"
            android:textSize="20dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/mau_trang"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/edit_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#fff"
            android:hint="Mật khẩu"
            android:maxLines="1"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/mau_do"
            android:textColor="@color/mau_trang"
            android:text="Đăng Nhập"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <TextView

            android:id="@+id/tv_quenmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/quenmk"
            android:textColor="@color/mau_trang"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>